<div class="container">
  <div class="card-container">
    <input class="form-control" type="text" placeholder="Votre adresse...">

    <h1>Poubelles proches de vous</h1>
      <div class="row">

      <!--   if adresse = true
        card poubelle la plus proche -->
      <% @bins.each do |bin| %>
        <div class="col-12">
          <div class="card-product">
            <div class="card-product-infos">
              <h2 id = "card-title"> <%= bin.name %> </h2>
              <p class="card-description"> 12 rue Emile Pehant, 44000 Nantes</p>
            </div>
          </div><%= cl_image_tag bin.photo, height: 300, width: 400, crop: :fill %>
        </div>

      <% end %>
      <!-- bin.each -->
      <!-- end -->
      </div>
  </div>
  <div>
    <div class="placeholder">
      <%= image_tag "mapgoogle.jpg" %>
    </div>
  </div>
</div>
