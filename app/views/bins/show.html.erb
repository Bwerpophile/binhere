
<div class="container-show">
  <!-- button_show -->
    <div class="hey">
      <h1 class="bin_name"> <span class="highlighted highlighted-yellow">POUBELLE : <%= @bin.name.upcase %></span></h1>
      <div class="badge<%= @bin.kind %>"> <%= @bin.kind %> </div>
    </div>


    <div class="button-retour">
      <%=  link_to bins_path(bin_type: @bin.kind) do %>
      <%= image_tag "retour-arrière.png" %>
      <% end %>
    </div>
</div>


<div class="profilreviewsmap">
  <div class="profilreview">
    <div class="profil">
      <div class=" binphoto">
        <%= cl_image_tag @bin.photo %>
      </div>
      <div class="binprofilinfos">
        <h2><strong> <%= @bin.name %> </strong></h2>
        <p><%= @bin.address %></p>
        <p> Déchets : <%= @bin.kind %></p>
      </div>
    </div>

    <div class="reviews">
      <div class="row customer-reviews">
        <div class="col-md-12 column">
          <div class="inner-box">
            <h2 style="color: #EEB111;"><strong>Partagez votre avis</strong></h2>
            <%= simple_form_for [@bin, @review] do |f| %> <!-- simple form -->
            <%= f.input :name, label: 'Objet' %>
            <%= f.input :description, label: 'Votre commentaire' %>
            <%= f.submit "Ajouter", class: "btn btn-primary"%>


            <% end %>
          <div class="avis_show">
            <% if @bin.reviews.any? %>
            <% @reviews.each do |review|  %>
              <div class="hover_review">
                <div class="user-infos">
                  <div class="user-avatar">
                    <%= cl_image_tag review.user.avatar, width: 200, heigth: 200,  :gravity=>"faces", :crop=>"fill", class:"card-trip-user avatar-bordered" %>
                  </div>
                  <div class="avis_name-user">
                    <div class="avis-user-name">
                      <p><strong><%= review.user.user_name.capitalize %></strong></p>
                    </div>
                    <div class=" avis-review-name">
                      <p><%= review.name %></p>
                    </div>
                  </div>
                  <div class="avis_date">
                    <div><p><%= review.created_at.strftime('%d/%m/%Y') %></p></div>
                  </div>
                </div>
                <div class="descriptif_avis">
                  <div><%= review.description %></div>
                </div>
              </div>
            <% end %>
            <% end %>
          </div>
          </div>
        </div>
      </div>
    </div>
  </div>



  <div class="map-show-container">
    <div class="map-container-show">
      <div id="map"
      data-markers="[<%= @marker.to_json %>]"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
      </div>
    </div>
  </div>
</div>



